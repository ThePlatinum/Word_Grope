                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.platinum.innovations.wordgrope.MainActivity" />
        </activity>
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
